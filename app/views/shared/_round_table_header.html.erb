<thead class="table-dark border border-white text-center align-middle">
  <tr>
    <th scope="col" style="width: 200px; font-size: 1.5em;"><%= table_name %></th>
    <% @game.game_players.each do |player| %>
      <th scope="col" style="width: 100px;"><%= player.player.name %></th>
    <% end %>
    <th scope="col" style="width: 70px;">
      <% if show_button %>
        <%= link_to new_game_round_path(@game), class:"text-decoration-none btn btn-empty game-actions" do %>
          <i class="bi bi-plus-square-fill" style="font-size: 2em;"></i>&nbsp;
        <% end %>
      <% end %>
    </th>
  </tr>
</thead>
