<table class="table table-striped table-bordered mx-auto" style="max-width: 1100px;">
  <%= render 'shared/round_table_header', table_name: 'Rounds', show_button: false %>
  <tbody>
    <% Round.round_types.each do |round_type_key, round_type_value| %>
      <tr>
        <td class="border border-dark"><%= round_type_value.humanize %></td>
        <% @game.game_players.each do |player| %>
          <td class="border border-dark" style="background-color: <%= player.rounds.any? { |round| round.round_type == round_type_key } ? '#0dcaf0' : 'none' %>"></td>
        <% end %>
        <td  class="border border-dark"></td>
      </tr>
    <% end %>
  </tbody>
</table>
