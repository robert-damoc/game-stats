<table class="table table-bordered mx-auto" style="max-width: 1100px;">
  <tbody class="border border-dark fs-5">
    <tr>
      <td scope="col" style="width: 200px; text-align: start">Total</td>
      <% @game.game_players.each do |player| %>
        <td scope="col" style="width: 100px; text-align: center"><%= @player_totals[player.id] || 0 %></td>
      <% end %>
      <td scope="col" style="width: 70px;"></td>
    </tr>
  </tbody>
</table>
