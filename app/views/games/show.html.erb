<h1>
  <p style="float: left;">Game <%= @game.id.split("-").first %></p>
  <p style="float: right;"><%= link_to "Back to games", games_path, class: "btn btn-primary btn-sm" %></p>
</h1>

<table class="table table table-striped table-hover table-sm">
  <thead class="table-dark">
    <tr style="text-align: center">
      <th scope="col">State</th>
      <th scope="col">Created</th>
      <th scope="col">Players</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody style="text-align: center">
    <tr>
      <td scope="row"><%= @game.state.humanize %></td>
      <td scope="row"><%= time_ago_in_words(@game.created_at) %></td>
      <td scope="row">
        <% if @game.players.any? %>
          <% @game.players.each do |player| %>
            <div><%= player.name %></div>
          <% end %>
        <% else %>
          No players
        <% end %>
      </td>
      <td scope="row">
        <div class="btn-group">
          <%= link_to edit_game_path(@game), class:"text-decoration-none" do %>
            <i class="bi bi-pencil-fill" style="font-size: 1.2rem; color: blue;"></i>&nbsp;
          <% end %>
          <%= button_to game_path(@game), method: :delete, class:"btn btn-empty btn-sm" do %>
            <i class="bi bi-trash3-fill" style="color: blue;"></i>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>
