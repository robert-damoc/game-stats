<h1>
  <p style="float: left;">
    New Game
  </p>
  <p style="float: right;"><%= link_to "Back to games", games_path, class: "btn btn-primary" %></p>
</h1>

<%= form_with(model: @game, local: true) do |form| %>
  <table class="table table table-striped table-hover table-sm mx-auto" style="max-width: 1100px;">
    <thead class="table-dark">
      <tr style="text-align: left">
        <th scope="col">Players</th>
      </tr>
    </thead>
    <tbody style="text-align: left">
      <tr>
        <td scope="row">
          <% if Player.all.any? %>
            <div>
              <%= form.collection_check_boxes :player_ids, Player.all, :id, :name do |b| %>
                <div>
                  <%= b.check_box %>
                  <%= b.label %>
                </div>
              <% end %>
            </div>
          <% else %>
            No players yet &nbsp;
            <%= link_to "Create new player", new_player_path, class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= form.submit 'Create Game', class: 'btn btn-primary' %>
<% end %>
