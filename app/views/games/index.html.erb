<h1>
  <p style="float: left;">Games</p>
  <p style="float: right;"><%= link_to "New game", new_game_path, class: "btn btn-primary" %></p>
</h1>

<br/><br/><br/>
<% if @games.any? %>
  <%== pagy_info(@pagy, item_name: 'games'.pluralize(@pagy.count)) %>

  <%= render 'games/game_table' %>

  <% if @pagy.count > Pagy::DEFAULT[:items] %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
<% else %>
  <h5 class="text-center">No games yet!</h5>
<% end %>
