

<table class="table table-striped table-hover table-sm">
  <thead class="table-dark table-bordered ">
    <tr style="text-align: center">
      <th>
        <%= link_to "Game Number", {
          sort: 'id',
          sort_dir: @sort == 'id' && @sort_dir == 'asc' ? 'desc' : 'asc'
        }, class: 'plain-link' %>
        <%= render 'games/sortingarrows' if @sort == 'id' %>
      </th>
      <th>
        <%= link_to "State", {
          sort: 'state',
          sort_dir: @sort == 'state' && @sort_dir == 'asc' ? 'desc' : 'asc'
        }, class: 'plain-link' %>
        <%= render 'games/sortingarrows' if @sort == 'state' %>
      </th>
      <th>
        <%= link_to "Created At", {
          sort: 'created_at',
          sort_dir: @sort == 'created_at' && @sort_dir == 'asc' ? 'desc' : 'asc'
        }, class: 'plain-link' %>
        <%= render 'games/sortingarrows' if @sort == 'created_at' %>
      </th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody style="text-align: center">
    <% @games.each do |game| %>
      <tr>
        <td scope="row"><%= game.id.split("-").first %></td>
        <td scope="row"><%= game.state.humanize %></td>
        <td scope="row"><%= time_ago_in_words(game.created_at) %></td>
        <td scope="row">
          <div class="btn-group">
            <%= link_to game_path(game), class:"text-decoration-none" do %>
              <i class="bi bi-eye-fill" style="font-size: 1.2rem; color: blue;"></i>&nbsp;
            <% end %>
            <%= link_to edit_game_path(game), class:"text-decoration-none" do %>
              <i class="bi bi-pencil-fill" style="font-size: 1.2rem; color: blue;"></i>&nbsp;
            <% end %>
            <%= button_to game_path(game), method: :delete, class:"text-decoration-none", class:"btn btn-empty btn-sm" do %>
              <i class="bi bi-trash3-fill" style="color: blue;"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
