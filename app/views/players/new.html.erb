<h1>
  <p style="float: left;">New Player</p>
  <p style="float: right;"><%= link_to "Back to players", players_path, class: "btn btn-primary btn-sm" %></p>
</h1>
<br/><br/><br/>

<%= form_with model: @player, url: players_path, method: :post do |form| %>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Name</label>
    <input class="form-control" id= <%= form.text_field :name %>
    <br/>
    <%= form.submit 'Create player', class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
