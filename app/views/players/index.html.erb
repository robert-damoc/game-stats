<h1>
  <p style="float: left;">Players</p>
  <p style="float: right;"><%= link_to "New player", new_player_path, class: "btn btn-primary" %></p>
</h1>

<br/><br/><br/>
<% if @players.any? %>
  <%== pagy_info(@pagy, item_name: 'games'.pluralize(@pagy.count)) %>

  <%= render 'player_table' %>

  <% if @pagy.count > Pagy::DEFAULT[:items] %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
<% else %>
  <h5 class="text-center">No players yet!</h5>
<% end %>
