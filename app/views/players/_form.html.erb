<%= form_with(model: player) do |form| %>
  <%= form.label :name, "Name", class: "form-label" %>
  <%= form.text_field :name, auto_focus: true, class: "form-control" %>
  <%= inline_error_for(:name, player) %>

  <%= link_to "Cancel", players_path, class: "btn btn-light" %>

  <%= form.submit class: "btn btn-secondary" %>
<% end %>
